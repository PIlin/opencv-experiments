#!/bin/bash


usage() {
  cat <<EOF
$0 CONFIGURATION
EOF
  exit 0
}
#[ "$#" -lt 1 ] && usage


TARGET=${1:-Debug}

echo 'execting:'

echo cmake -G"Eclipse CDT4 - Unix Makefiles" -DCMAKE_BUILD_TYPE=$TARGET -DCMAKE_ECLIPSE_GENERATE_SOURCE_PROJECT=TRUE  ../src
cmake -G"Eclipse CDT4 - Unix Makefiles" -DCMAKE_BUILD_TYPE=$TARGET -DCMAKE_ECLIPSE_GENERATE_SOURCE_PROJECT=TRUE  ../src
